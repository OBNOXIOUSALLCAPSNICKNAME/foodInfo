<resources>

    <style name = "appTheme" parent = "Theme.MaterialComponents.Light.NoActionBar">
        <item name = "android:windowNoTitle">true</item>
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowFullscreen">true</item>
        <item name = "android:windowContentOverlay">@null</item>
        <item name = "android:windowBackground">@color/main_background_dark</item>

        <item name = "colorAccent">@color/primary_dark</item>

        <item name = "appPrimaryColor">@color/primary_dark</item>
        <item name = "appMainBackgroundColor">@color/main_background_dark</item>
        <item name = "appSecondaryBackgroundColor">@color/secondary_background_dark</item>
        <item name = "appMainFontColor">@color/main_font_dark</item>
        <item name = "appSecondaryFontColor">@color/secondary_font_dark</item>
        <item name = "appWarningColor">@color/warning</item>
        <item name = "appErrorColor">@color/error</item>
        <item name = "appDivider">@color/divider_dark</item>

        <item name = "appRoundedEdittext">@drawable/rounded_edittext_dark</item>
        <item name = "appNavStateColor">@drawable/nav_state_color_dark</item>
        <item name = "appTabLayoutIndicator">@drawable/tab_layout_indicator</item>
        <item name = "appProgressBarLine">@drawable/progress_bar_dark</item>
        <item name = "appBackgroundBig">@drawable/background_big_dark</item>
        <item name = "appBackgroundItemBig">@drawable/background_item_big_dark</item>
        <item name = "appBackgroundItemSmall">@drawable/background_item_small_dark</item>

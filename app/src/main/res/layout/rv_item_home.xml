<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "wrap_content"
    android:layout_height = "match_parent"
    tools:layout_height = "370dp"
    tools:layout_width = "240dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        style = "@style/BackgroundItemBig"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:clipToPadding = "false"
        app:layout_constraintDimensionRatio = "W,240:370"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id = "@+id/iv_home_rv_recipe_preview"
            android:layout_width = "0dp"
            android:layout_height = "0dp"
            android:layout_margin = "@dimen/dp_20"
            android:background = "@color/secondary_background"
            android:elevation = "3dp"
            android:scaleType = "centerCrop"
            app:layout_constraintDimensionRatio = "W,1:1"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:shapeAppearanceOverlay = "@style/ShapeAppearanceBig"
            tools:src = "@sample/recipes.json/short/preview" />

        <TextView
            android:id = "@+id/tv_home_rv_recipe_name"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginHorizontal = "@dimen/dp_30"
            android:layout_marginTop = "@dimen/dp_10"
            android:ellipsize = "end"
            android:fontFamily = "@font/product_sans_medium"
            android:gravity = "top|start"
            android:maxLines = "1"
            android:textAlignment = "textStart"
            android:textColor = "?appMainFontColor"
            android:textSize = "@dimen/text_22"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@id/iv_home_rv_recipe_preview"
            tools:text = "@sample/recipes.json/short/name" />

        <TextView
            android:id = "@+id/tv_home_rv_recipe_servings"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "@dimen/dp_30"
            android:layout_marginTop = "@dimen/dp_6"
            android:drawablePadding = "@dimen/dp_6"
            android:fontFamily = "@font/product_sans_regular"
            android:gravity = "bottom|start"
            android:text = "34"
            android:textColor = "?appSecondaryFontColor"
            android:textSize = "@dimen/text_18"
            app:drawableEndCompat = "@drawable/ic_peoples_20"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/tv_home_rv_recipe_name" />

        <TextView
            android:id = "@+id/tv_home_rv_recipe_time"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "@dimen/dp_20"
            android:layout_marginTop = "@dimen/dp_6"
            android:drawablePadding = "@dimen/dp_6"
            android:fontFamily = "@font/product_sans_regular"
            android:gravity = "bottom|start"
            android:text = "56 min"
            android:textColor = "?appSecondaryFontColor"
            android:textSize = "@dimen/text_18"
            app:drawableEndCompat = "@drawable/ic_time_20"
            app:layout_constraintStart_toEndOf = "@+id/tv_home_rv_recipe_servings"
            app:layout_constraintTop_toBottomOf = "@+id/tv_home_rv_recipe_name" />

        <TextView
            android:id = "@+id/tv_home_rv_recipe_calories"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "@dimen/dp_30"
            android:fontFamily = "@font/product_sans_medium"
            android:textColor = "?appMainFontColor"
            android:textSize = "@dimen/text_22"
            app:drawableEndCompat = "@drawable/ic_kcal_28"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "@+id/btn_like"
            tools:text = "@sample/recipes.json/short/calories" />

        <ImageView
            android:id = "@+id/btn_like"
            android:layout_width = "@dimen/button_like_big_size"
            android:layout_height = "@dimen/button_like_big_size"
            android:background = "@drawable/button_like_big"
            android:padding = "@dimen/dp_10"
            android:src = "@drawable/ic_like_20"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "wrap_content"
    android:layout_height = "match_parent"
    tools:layout_height = "370dp"
    tools:layout_width = "240dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        style = "@style/BackgroundItemBig"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:clipToPadding = "false"
        app:layout_constraintDimensionRatio = "W,240:370"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id = "@+id/iv_home_rv_recipe_preview"
            android:layout_width = "0dp"
            android:layout_height = "0dp"
            android:layout_margin = "20dp"
            android:background = "@color/secondary_background"
            android:elevation = "3dp"
            android:scaleType = "centerCrop"
            app:layout_constraintDimensionRatio = "W,1:1"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:shapeAppearanceOverlay = "@style/ShapeAppearanceBig"
            tools:src = "@sample/recipes.json/short/preview" />

        <TextView
            android:id = "@+id/tv_home_rv_recipe_name"
            style = "@style/TextViewHeader"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginHorizontal = "30dp"
            android:layout_marginTop = "10dp"
            android:ellipsize = "end"
            android:gravity = "top|start"
            android:maxLines = "1"
            android:textAlignment = "textStart"
            android:textSize = "22sp"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@id/iv_home_rv_recipe_preview"
            tools:text = "@sample/recipes.json/short/name" />

        <TextView
            android:id = "@+id/tv_home_rv_recipe_servings"
            style = "@style/TextViewBigSecondary"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "30dp"
            android:layout_marginTop = "5dp"
            android:drawablePadding = "6dp"
            android:gravity = "bottom|start"
            android:text = "34"
            app:drawableEndCompat = "@drawable/ic_peoples_20"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/tv_home_rv_recipe_name" />

        <TextView
            android:id = "@+id/tv_home_rv_recipe_time"
            style = "@style/TextViewBigSecondary"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "14dp"
            android:layout_marginTop = "5dp"
            android:drawablePadding = "6dp"
            android:gravity = "bottom|start"
            android:text = "56 min"
            app:drawableEndCompat = "@drawable/ic_time_20"
            app:layout_constraintStart_toEndOf = "@+id/tv_home_rv_recipe_servings"
            app:layout_constraintTop_toBottomOf = "@+id/tv_home_rv_recipe_name" />

        <TextView
            android:id = "@+id/tv_home_rv_recipe_calories"
            style = "@style/TextViewHeader"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "30dp"
            android:layout_marginBottom = "24dp"
            android:drawablePadding = "6dp"
            android:textSize = "22sp"
            app:drawableEndCompat = "@drawable/ic_kcal_28"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            tools:text = "@sample/recipes.json/short/calories" />

        <ImageView
            android:layout_width = "40dp"
            android:layout_height = "40dp"
            android:layout_marginEnd = "30dp"
            android:background = "@drawable/rounded_button"
            android:elevation = "2dp"
            android:padding = "6dp"
            android:src = "@drawable/ic_like_20"
            app:layout_constraintBottom_toBottomOf = "@+id/tv_home_rv_recipe_calories"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "@+id/tv_home_rv_recipe_calories" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
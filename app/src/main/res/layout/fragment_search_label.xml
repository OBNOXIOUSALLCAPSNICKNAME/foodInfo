<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:layout_marginHorizontal = "@dimen/screen_horizontal_margin"
    android:layout_marginTop = "@dimen/screen_top_margin">

    <ImageView
        android:id = "@+id/btn_back"
        style = "@style/ButtonStart"
        android:contentDescription = "@string/default_content_description"
        android:src = "@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <ImageView
        android:id = "@+id/btn_search"
        style = "@style/ButtonEnd"
        android:contentDescription = "@string/default_content_description"
        android:elevation = "1dp"
        android:src = "@drawable/ic_search"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/tv_label"
        android:layout_width = "wrap_content"
        android:layout_height = "0dp"
        android:layout_marginHorizontal = "@dimen/dp_10"
        android:drawablePadding = "@dimen/dp_6"
        android:ellipsize = "end"
        android:gravity = "center"
        android:maxLines = "1"
        android:theme = "@style/TextViewBig"
        app:drawableStartCompat = "@drawable/ic_question_mark"
        app:layout_constrainedWidth = "true"
        app:layout_constraintBottom_toBottomOf = "@id/btn_back"
        app:layout_constraintEnd_toStartOf = "@id/btn_search"
        app:layout_constraintStart_toEndOf = "@id/btn_back"
        app:layout_constraintTop_toTopOf = "parent"
        tools:text = "condiments and sauces" />

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/rv_recipes"
        android:layout_width = "match_parent"
        android:layout_height = "0dp"
        android:layout_marginHorizontal = "@dimen/dp_12"
        android:layout_marginTop = "@dimen/screen_top_margin"
        android:clipToPadding = "false"
        android:descendantFocusability = "blocksDescendants"
        android:paddingBottom = "@dimen/dp_30"
        app:layoutManager = "androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/btn_back"
        app:spanCount = "2"
        tools:listitem = "@layout/rv_item_search_target" />

    <ProgressBar
        android:id = "@+id/pb_recipes"
        android:layout_width = "@dimen/progress_size"
        android:layout_height = "@dimen/progress_size"
        android:layout_gravity = "center"
        android:visibility = "gone"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/btn_back" />

</androidx.constraintlayout.widget.ConstraintLayout>
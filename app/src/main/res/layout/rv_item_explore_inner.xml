<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    style = "@style/BackgroundItemSmall"
    android:layout_width = "0dp"
    android:layout_height = "0dp"
    tools:layout_height = "250dp"
    tools:layout_width = "160dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id = "@+id/iv_search_rv_recipe_preview"
        android:layout_width = "0dp"
        android:layout_height = "0dp"
        android:layout_margin = "@dimen/dp_12"
        android:background = "@color/secondary_background"
        android:elevation = "3dp"
        android:scaleType = "centerCrop"
        app:layout_constraintDimensionRatio = "W,1:1"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        app:shapeAppearanceOverlay = "@style/ShapeAppearanceNormal"
        tools:src = "@sample/recipes.json/short/preview" />

    <TextView
        android:id = "@+id/tv_search_rv_recipe_name"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_marginHorizontal = "@dimen/dp_20"
        android:layout_marginTop = "@dimen/dp_6"
        android:ellipsize = "end"
        android:fontFamily = "@font/product_sans_medium"
        android:maxLines = "1"
        android:textAlignment = "textStart"
        android:textColor = "?appMainFontColor"
        android:textSize = "@dimen/text_16"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@id/iv_search_rv_recipe_preview"
        tools:text = "@sample/recipes.json/short/name" />

    <TextView
        android:id = "@+id/tv_search_rv_recipe_calories"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "@dimen/dp_20"
        android:layout_marginBottom = "@dimen/dp_20"
        android:fontFamily = "@font/product_sans_medium"
        android:textColor = "?appMainFontColor"
        android:textSize = "@dimen/text_18"
        app:drawableEndCompat = "@drawable/ic_kcal_20"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        tools:text = "@sample/recipes.json/short/calories" />

    <ImageView
        android:layout_width = "@dimen/button_like_small_size"
        android:layout_height = "@dimen/button_like_small_size"
        android:layout_marginEnd = "@dimen/dp_20"
        android:background = "@drawable/rounded_button"
        android:elevation = "2dp"
        android:padding = "@dimen/dp_6"
        android:src = "@drawable/ic_like_20"
        app:layout_constraintBottom_toBottomOf = "@+id/tv_search_rv_recipe_calories"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintTop_toTopOf = "@+id/tv_search_rv_recipe_calories" />

</androidx.constraintlayout.widget.ConstraintLayout>
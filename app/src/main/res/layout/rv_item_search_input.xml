<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "@dimen/dp_54">

    <ImageView
        android:id = "@+id/iv_apply_search"
        android:layout_width = "@dimen/dp_54"
        android:layout_height = "@dimen/dp_54"
        android:padding = "@dimen/dp_16"
        android:src = "@drawable/ic_history"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <ImageView
        android:id = "@+id/iv_apply_text"
        android:layout_width = "@dimen/dp_54"
        android:layout_height = "@dimen/dp_54"
        android:padding = "@dimen/dp_16"
        android:src = "@drawable/ic_arrow_outward"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/tv_search_input"
        style = "@style/TextViewMedium"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:gravity = "center|start"
        android:paddingHorizontal = "@dimen/dp_10"
        app:layout_constraintEnd_toStartOf = "@id/iv_apply_text"
        app:layout_constraintStart_toEndOf = "@id/iv_apply_search"
        app:layout_constraintTop_toTopOf = "parent"
        tools:text = "@sample/search_input_history.json/content/text" />

</androidx.constraintlayout.widget.ConstraintLayout>
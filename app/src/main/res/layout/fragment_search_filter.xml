<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:layout_marginHorizontal = "@dimen/screen_horizontal_margin"
    android:layout_marginTop = "@dimen/screen_vertical_margin">

    <ImageView
        android:id = "@+id/btn_back"
        style = "@style/ButtonStroke"
        android:contentDescription = "@string/default_content_description"
        android:src = "@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <ImageView
        android:id = "@+id/btn_load"
        style = "@style/ButtonStroke"
        android:layout_marginEnd = "@dimen/dp_10"
        android:contentDescription = "@string/default_content_description"
        android:src = "@drawable/ic_filter_load"
        app:layout_constraintEnd_toStartOf = "@+id/btn_save"
        app:layout_constraintTop_toTopOf = "parent" />

    <ImageView
        android:id = "@+id/btn_save"
        style = "@style/ButtonStroke"
        android:layout_marginEnd = "@dimen/dp_10"
        android:contentDescription = "@string/default_content_description"
        android:src = "@drawable/ic_filter_save"
        app:layout_constraintEnd_toStartOf = "@+id/btn_clear"
        app:layout_constraintTop_toTopOf = "parent" />

    <ImageView
        android:id = "@+id/btn_clear"
        style = "@style/ButtonStroke"
        android:contentDescription = "@string/default_content_description"
        android:src = "@drawable/ic_filter_clear"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintTop_toTopOf = "parent"
        app:tint = "?appErrorColor" />


    <include
        android:id = "@+id/hint"
        layout = "@layout/tbd_screen_hint" />

</androidx.constraintlayout.widget.ConstraintLayout>
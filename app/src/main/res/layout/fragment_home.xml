<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:layout_marginBottom = "@dimen/activity_bottom_margin"
    android:orientation = "vertical"
    android:paddingTop = "20dp"
    tools:context = ".ui.HomeFragment">


    <TextView
        android:id = "@+id/tv_header"
        style = "@style/TextViewBigMain"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_marginHorizontal = "@dimen/activity_horizontal_margin"
        android:layout_marginTop = "20dp"
        android:text = "@string/home_header_text"
        android:textAlignment = "textStart"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/tv_search"
        style = "@style/SearchInput"
        android:layout_marginHorizontal = "@dimen/activity_horizontal_margin"
        android:layout_marginTop = "20dp"
        android:paddingHorizontal = "@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/tv_header" />

    <LinearLayout
        android:layout_width = "0dp"
        android:layout_height = "0dp"
        android:layout_marginVertical = "10dp"
        android:orientation = "vertical"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintHeight_max = "450dp"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@id/tv_search">

        <TextView
            android:id = "@+id/tv_home_recipes_header1"
            style = "@style/TextViewHeader"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginVertical = "20dp"
            android:layout_marginStart = "@dimen/activity_vertical_margin"
            android:text = "@string/text_home_recipes_header" />

        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/rv_home_recipes"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:clipToPadding = "true"
            android:orientation = "horizontal"
            app:layoutManager = "LinearLayoutManager"
            tools:listitem = "@layout/rv_item_home" />

        <ProgressBar
            android:id = "@+id/home_progress"
            android:layout_width = "50dp"
            android:layout_height = "match_parent"
            android:layout_gravity = "center"
            android:visibility = "gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



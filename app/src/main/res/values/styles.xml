<resources>

    <style name = "BackgroundBig">
        <item name = "android:background">@drawable/background_big</item>
    </style>

    <style name = "BackgroundItemBig">
        <item name = "android:background">@drawable/background_item_big</item>
    </style>

    <style name = "BackgroundItemSmall">
        <item name = "android:background">@drawable/background_item_small</item>
    </style>

    <style name = "ShapeAppearanceBig">
        <item name = "cornerFamily">rounded</item>
        <item name = "cornerSize">@dimen/image_corner_big</item>
    </style>

    <style name = "ShapeAppearanceNormal">
        <item name = "cornerFamily">rounded</item>
        <item name = "cornerSize">@dimen/image_corner_normal</item>
    </style>

    <style name = "SearchInput">
        <item name = "android:textColor">?appSecondaryFontColor</item>
        <item name = "android:textSize">@dimen/text_16</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
        <item name = "android:background">@drawable/rounded_edittext</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">@dimen/search_view_height</item>
        <item name = "android:gravity">center|start</item>
        <item name = "android:text">@string/et_search_hint</item>
    </style>

    <style name = "SearchView">
        <item name = "android:textSize">@dimen/text_16</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:textColorHint">?appSecondaryFontColor</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name = "TextViewBigMain">
        <item name = "android:textSize">@dimen/text_18</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name = "TextViewBigSecondary" parent = "TextViewBigMain">
        <item name = "android:textColor">?appSecondaryFontColor</item>
    </style>

    <style name = "TextViewMediumMain">
        <item name = "android:textSize">@dimen/text_15</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name = "TextViewMediumSecondary" parent = "TextViewMediumMain">
        <item name = "android:textColor">?appSecondaryFontColor</item>
    </style>

    <style name = "TextViewSmallMain">
        <item name = "android:textSize">@dimen/text_13</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name = "TextViewSmallSecondary" parent = "TextViewSmallMain">
        <item name = "android:textColor">?appSecondaryFontColor</item>
    </style>

    <style name = "Scrollable">
        <item name = "android:clipChildren">false</item>
        <item name = "android:clipToPadding">false</item>
    </style>

    <style name = "navBar">
        <item name = "itemIconTint">@drawable/nav_state_color</item>
        <item name = "android:background">?appMainBackgroundColor</item>
    </style>

    <style name = "TabLayout" parent = "Scrollable">
        <item name = "android:background">?appMainBackgroundColor</item>
        <item name = "tabIndicator">@drawable/tab_layout_indicator</item>
        <item name = "tabRippleColor">@null</item>
        <item name = "tabTextAppearance">@style/Tab</item>
        <item name = "tabIndicatorColor">?appPrimaryColor</item>
        <item name = "tabSelectedTextColor">?appPrimaryColor</item>
        <item name = "tabTextColor">?appSecondaryFontColor</item>
    </style>

    <style name = "Tab">
        <item name = "android:textSize">@dimen/text_16</item>
        <item name = "android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name = "ProgressBarLine" parent = "Widget.AppCompat.ProgressBar.Horizontal">
        <item name = "android:layout_height">@dimen/progress_bar_line_height</item>
        <item name = "android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <style name = "ProgressBarCircle">
        <item name = "indicatorColor">?appMainFontColor</item>
        <item name = "trackColor">?appSecondaryBackgroundColor</item>
        <item name = "trackCornerRadius">@dimen/progress_bar_circle_thickness</item>
        <item name = "trackThickness">@dimen/progress_bar_circle_thickness</item>
    </style>

    <style name = "Divider">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">1dp</item>
        <item name = "android:background">?appDivider</item>
    </style>

    <style name = "ButtonTransparent">
        <item name = "android:layout_width">@dimen/button_transparent_size</item>
        <item name = "android:layout_height">@dimen/button_transparent_size</item>
        <item name = "android:padding">@dimen/button_transparent_padding</item>
    </style>
</resources>
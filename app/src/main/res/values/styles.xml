<resources>

    <style name = "ShapeAppearanceNormal">
        <item name = "cornerFamily">rounded</item>
        <item name = "cornerSize">@dimen/dp_18</item>
    </style>

    <style name = "ShapeAppearanceBig">
        <item name = "cornerFamily">rounded</item>
        <item name = "cornerSize">@dimen/dp_24</item>
    </style>

    <style name = "ShapeAppearanceLarge">
        <item name = "cornerFamily">rounded</item>
        <item name = "cornerSize">@dimen/dp_30</item>
    </style>

    <style name = "SearchView">
        <item name = "android:textSize">@dimen/text_20</item>
        <item name = "android:editTextColor">?appMainFontColor</item>
        <item name = "android:textColorHint">@color/divider</item>
        <item name = "android:fontFamily">@font/app_font_regular</item>
    </style>

    <style name = "TextViewVeryBig">
        <item name = "android:textSize">@dimen/text_22</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:fontFamily">@font/app_font_regular</item>
    </style>

    <style name = "TextViewBig">
        <item name = "android:textSize">@dimen/text_20</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:fontFamily">@font/app_font_regular</item>
    </style>

    <style name = "TextViewMedium">
        <item name = "android:textSize">@dimen/text_18</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:fontFamily">@font/app_font_regular</item>
    </style>

    <style name = "TextViewSmall">
        <item name = "android:textSize">@dimen/text_16</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:fontFamily">@font/app_font_regular</item>
    </style>

    <style name = "TextViewVerySmall">
        <item name = "android:textSize">@dimen/text_14</item>
        <item name = "android:textColor">?appMainFontColor</item>
        <item name = "android:fontFamily">@font/app_font_regular</item>
    </style>

    <style name = "NavigationMenu">
        <item name = "itemIconTint">@drawable/navigation_selector_color</item>
        <item name = "android:background">?appMainBackgroundColor</item>
    </style>

    <style name = "ProgressBarLine" parent = "Widget.AppCompat.ProgressBar.Horizontal">
        <item name = "android:layout_height">@dimen/dp_8</item>
        <item name = "android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <style name = "ProgressBarCircle">
        <item name = "indicatorColor">?appMainFontColor</item>
        <item name = "trackColor">?appSecondaryBackgroundColor</item>
        <item name = "trackCornerRadius">@dimen/dp_6</item>
        <item name = "trackThickness">@dimen/dp_6</item>
    </style>

    <style name = "Divider">
        <item name = "android:layout_width">0dp</item>
        <item name = "android:layout_height">1dp</item>
        <item name = "android:background">?appDivider</item>
    </style>

    <style name = "MiniIngredient">
        <item name = "android:layout_width">@dimen/dp_66</item>
        <item name = "android:layout_height">@dimen/dp_66</item>
        <item name = "android:scaleType">centerCrop</item>
        <item name = "shapeAppearanceOverlay">@style/ShapeAppearanceNormal</item>
    </style>

    <style name = "BottomSheetDialog" parent = "Theme.Design.Light.BottomSheetDialog">
        <item name = "bottomSheetStyle">@style/BottomSheetDialogModal</item>
    </style>

    <style name = "BottomSheetDialogModal" parent = "Widget.Design.BottomSheet.Modal">
        <item name = "android:background">@drawable/background_main_bg_24</item>
    </style>

    <style name = "ButtonCenter">
        <item name = "tint">?appMainFontColor</item>
        <item name = "android:layout_width">@dimen/dp_66</item>
        <item name = "android:layout_height">@dimen/dp_66</item>
        <item name = "android:paddingTop">@dimen/dp_20</item>
        <item name = "android:paddingBottom">@dimen/dp_20</item>
    </style>

    <style name = "ButtonEnd">
        <item name = "tint">?appMainFontColor</item>
        <item name = "android:layout_width">@dimen/dp_66</item>
        <item name = "android:layout_height">@dimen/dp_66</item>
        <item name = "android:scaleType">fitEnd</item>
        <item name = "android:paddingTop">@dimen/dp_20</item>
        <item name = "android:paddingEnd">@dimen/screen_horizontal_margin</item>
        <item name = "android:paddingBottom">@dimen/dp_20</item>
    </style>

    <style name = "ButtonStart">
        <item name = "tint">?appMainFontColor</item>
        <item name = "android:layout_width">@dimen/dp_66</item>
        <item name = "android:layout_height">@dimen/dp_66</item>
        <item name = "android:scaleType">fitStart</item>
        <item name = "android:paddingStart">@dimen/screen_horizontal_margin</item>
        <item name = "android:paddingTop">@dimen/dp_20</item>
        <item name = "android:paddingBottom">@dimen/dp_20</item>
    </style>

    <style name = "ActivityAnimation" parent = "@android:style/Animation.Activity">
        <item name = "android:activityOpenEnterAnimation">@anim/activity_transition</item>
    </style>

</resources>